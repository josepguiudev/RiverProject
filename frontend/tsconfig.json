// baseUrl. moduleResolution y "./app/**/*.tsx" han sido a√±adidos para que TS, Expo y StoryBook.

{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./app/**/*.tsx" 
  ]
}
